# postinst framework for openpanel packages
#
# see: dh_installdeb(1)

set -e

. /usr/share/debconf/confmodule

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

case "$1" in
    configure)
        chown openpanel-core:openpanel-authd /var/openpanel/conf/staging/User

        db_get openpanel-mod-user/root_password
        if [ -n "$RET" ]; then
            TASKFILE="/var/openpanel/taskqueue/99_change_openadmin_pass"
            echo "#!/bin/sh" > $TASKFILE
            echo 'echo \"$(date) Changing password for openpanel-admin from postinst\" >> /var/openpanel/log/openpanel-mod-user.log' > $TASKFILE
            echo "/usr/bin/openpanel-cli 'update user openpanel-admin password=\"$RET\"' 2>&1 >> /dev/null" >> $TASKFILE
            chmod 700 "$TASKFILE"
            
            cp $TASKFILE /tmp/

            # clean up the password, so we don't leak it through debconf
            db_set openpanel-mod-user/root_password ""
            db_set openpanel-mod-user/root_password_again ""
            
            if [ -z "$DPKG_MAINTSCRIPT_PACKAGE" ]; then
                invoke-rc.d openpanel-core reload
            else
                dpkg-trigger /var/openpanel/modules
            fi

        fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac


db_stop # in case invoke fails


# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


