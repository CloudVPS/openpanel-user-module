module User						< uuid fc6dad57-379a-46b7-a4fb-82652fa55f75
								< version 1.0
								< languages en_EN
								< apitype xml
								< getconfig true
	
	quota User:Diskquota		: Disk quota < units MB
							
# ============================================================================
# CLASSES
# ============================================================================
class User						< uuid d6001920-2ae4-45ff-9dfb-cf1bdb2ef329
								< version 1
								< indexing manual
								< uniquein class
								< shortname user
								< title User
								< description System/OpenPanel user
								< sortindex 10
								< icon user.png
							
								< capabilities create update delete
								< listview id name_customer emailaddress
								< required id password name_customer emailaddress

	string id					: Username
								< example myname812
								< regexp [:username:]
								
	password password			: Password
								< crypt md5
								< textwidth 14
								< example sPswd13t
								< regexp [:password:]
								
	string name_customer		: Customer name
								< example John Smith
								
	string name_company			: Company name 
								< regexp [:company:]
								< example Acme Inc.
								
	string address_street		: Street
								< example Paper street
								< regexp [:address:]
								< textwidth 24
								
	string address_number		: House number
								< example 145
								< regexp [:numbers:]
								< textwidth 5
								
	string address_suffix		: Number suffix
								< example apt. 14
								< regexp [:alnum:]
								< textwidth 7
								< sameline true
								
	string address_zipcode		: Zipcode
								< example 2388
								< regexp [:zipcode:]
								< textwidth 8
								
	string address_state		: State / Province
								< regexp [:alnum:]
								< textwidth 12
								< sameline true
								
	string address_city			: City
								< example Metropolis
								< regexp [:city:]
								< textwidth 17
								
	string address_country		: Country
								< example United States
								< regexp [:country:]
								< textwidth 17
								< sameline true
								
	enum language				: Language
	string fax_country			: Fax country code
								< regexp ^[+]?[0-9]+$
								< textwidth 4
								< example +1
								
	string fax_area				: Area
								< regexp [1-9][0-9]+
								< textwidth 5
								< sameline true
								< example 555
								
	string fax_number			: Number
								< regexp [:numbers:]
								< textwidth 10
								< sameline true
								< example 1231482
								
	string telephone_country	: Phone country	
								< regexp ^[+]?[0-9]+$
								< textwidth 4
								< example +1
								
	string telephone_area		: Area
								< regexp [1-9][0-9]+
								< textwidth 5
								< sameline true
								< example 555
								
	string telephone_number		: Number
								< regexp [:numbers:]
								< textwidth 10
								< sameline true
								< example 1382741
								
	string website				: Website URL
								< regexp [:url:]
								< textwidth 35
	
	string emailaddress			: Email address
								< regexp [:email:]
								< textwidth 35
								< example john@acme.example.net
								
	textarea comment			: Comment
								< textwidth 45
								< rows 4


# ----------------------------------------------------------------------------
class OpenCORE:Quota			< uuid 34789832-e1bd-441d-9ffc-193c6364b9d7
								< version 1
								< requires User
								< indexing manual
								< uniquein parent
								< shortname quota
								< title Quota
								< description Quota information
								< sortindex 20
								
								< capabilities update
	
	string id					: Resource
								< flags visible
								< gridhide true
								
	string description			: Description
								< flags visible
								< gridwidth 41
								
	string units				: Unit 
								< flags visible
								< gridwidth 13
								
	integer usage				: Usage
								< flags visible
								< gridwidth 7
								
	integer quota				: Quota
								< flags enabled visible
								< gridwidth 7
								< textwidth 3
	

# ----------------------------------------------------------------------------
class OpenCORE:System			< uuid f5ab1775-56a3-42d2-9853-7fdc13709003
								< version 1
								< indexing manual
								< singleton system
								< shortname opencore
								< title System
								< description OpenCORE System Information
								< sortindex 100
								< icon system.png
	
	string id					: id < flags required
	string version				: Build version < flags visible
	string buildhost			: Build host < flags visible < clihide true
	string builddate			: Build date < flags visible
	string grace				: Grace library version < flags visible
	
								
# ----------------------------------------------------------------------------
class OpenCORE:Prefs			< uuid f0323afe-4ca6-4625-a9a5-2c679cc44e9d
								< version 1
								< indexing manual
								< singleton prefs
								< shortname prefs
								< title Preferences
								< description System Preferences
								< sortindex 250
								< icon prefs.png
								
								< capabilities admin
								
	string id					: id < flags required

# ----------------------------------------------------------------------------
class OpenCORE:ActiveSession	< uuid 37b77a2a-fe61-4d37-a604-ee003512111e
								< version 1
								< requires OpenCORE:System
								< indexing auto
								< shortname session
								< title Sessions
								< description Active opencore session
								< sortindex 120
								
								< capabilities admin
								
	string id					: Session-id < gridwidth 40
	string user					: User < gridwidth 15
	string origin				: Origin < gridwidth 43


# ----------------------------------------------------------------------------
class OpenCORE:ErrorLog			< uuid a11a6b9d-78d1-4dc4-8c0a-9f6f25a24617
								< version 1
								< requires OpenCORE:System
								< indexing auto
								< shortname errorlog
								< title Error Log
								< description Server side error log
								< sortindex 110
								< explanation errorlog.html
								
								< capabilities admin
	
	string id					: id < flags enabled
	string time					: When < gridwidth 20
	string subsystem			: Component < gridwidth 15
	string message				: Message < gridwidth 63


# ----------------------------------------------------------------------------
class OpenCORE:ClassList		< uuid f1aa6d01-807a-43df-b650-1186a36a2ecf
								< version 1
								< requires OpenCORE:System
								< indexing manual
								< shortname classlist
								< title Classes
								< description Loaded OpenCORE classes
								< sortindex 130
								
	string id					: Class
								< cliwidth 16
								< gridwidth 25
								
	string module				: Module
								< cliwidth 20
								< gridwidth 25
								
	string description			: Description < gridwidth 35
	integer version				: Version
								< clihide true
								< gridwidth 8
								
	integer shortname			: Short (CLI) name
								< clihide true
								< gridhide true


# ============================================================================
# ENUMS
# ============================================================================
enum language
	value en_EN 				: English
	value nl_NL					: Nederlands
	value fr_FR					: Francais
	value de_DE					: Deutsch

# ============================================================================
# AUTHD
# ============================================================================
authd commandclasses
	commandclass user
